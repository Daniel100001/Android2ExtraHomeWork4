<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0C0C"
    tools:context=".ui.onBoard.OnBoardFragment">


    <ImageView
        android:id="@+id/animation_view"
        android:layout_width="300dp"
        android:scaleType="fitXY"
        android:layout_height="280dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/on_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очень удобный функционал"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation_view" />

    <ImageView
        android:id="@+id/fragment_on_board_image_orange"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on_txt" />

    <ImageView
        android:id="@+id/fragment_on_board_image_gray1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_on_board_image_orange"
        app:layout_constraintTop_toTopOf="@+id/fragment_on_board_image_orange" />

    <ImageView
        android:id="@+id/fragment_on_board_image_gray2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_on_board_image_orange"
        app:layout_constraintEnd_toStartOf="@+id/fragment_on_board_image_orange" />


</androidx.constraintlayout.widget.ConstraintLayout>